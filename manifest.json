{
  "manifest_version": 2,
  "name": "niobium-password-gen",
  "version": "1.0",
  "description": "Password generator that generates passwords with varying lengths and complexity",

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png"
  },

  "browser_action": {
    "browser_style": true,
    "default_popup": "popup/passwords.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  }
}
